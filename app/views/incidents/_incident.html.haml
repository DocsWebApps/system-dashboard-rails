%h3
  =@system_decorator.name
%br
  =image_tag @system_decorator.set_system_smiley
%p
  Show Incident History
  =check_box_tag "history-check-box"
%div{id: 'incident-details'}
  %h3
    Recent Incidents
  - if @system_decorator.any_recent_incidents?
    %table{class: 'table table-bordered table-condensed td-bg'}
      %div{class: 'row-fluid'}
        %tr
          %th{class: 'span2'} HP Reference
          %th{class: 'span5'} Description
          %th{class: 'span2'} Date
          %th{class: 'span1'} Time
          %th{class: 'span1'} Severity
          %th{class: 'span1'} Status
        - @system_decorator.incident_list.each do |incident|
          %tr
            %td
              =incident.hp_ref  
            %td
              =incident.description
            %td
              =incident.date.to_formatted_s(:rfc822)
            %td
              =incident.time.to_formatted_s(:time)              
            %td
              =incident.severity       
            %td
              =incident.status 
  - else  
    %p
      No P1 or P2 incidents during the last 24 hours  